<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/guillotine_background"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/profile_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_profile" />

        <TextView
            android:id="@+id/my_habits"
            style="@style/TextView.GuillotineItem"
            android:onClick="My Habit"
            android:clickable="true"
            android:text="My Habit" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feed_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_feed" />

        <TextView
            android:id="@+id/c_c"
            style="@style/TextView.GuillotineItem"
            android:text="Crunch World"
            android:clickable="true"
            android:onClick="Crunch World"/>
    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_activity" />

        <TextView
            style="@style/TextView.GuillotineItem"
            android:clickable="true"
            android:id="@+id/cues"
            android:onClick="@string/cues"
            android:text="@string/cues" />
    </LinearLayout>
    <LinearLayout
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_activity" />

        <TextView
            style="@style/TextView.GuillotineItem"
            android:clickable="true"
            android:id="@+id/challenges"
            android:text="Pair Up" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_divider_height" />

    <LinearLayout
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_settings" />

        <TextView
            style="@style/TextView.GuillotineItem"
            android:id="@+id/logout_button"
            android:text="@string/logout"
            android:clickable="true"
           />
        </LinearLayout>




    </LinearLayout>


