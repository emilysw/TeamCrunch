<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/White"
              android:orientation="vertical"
    >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/creationflow1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/OrangeRed"
            android:text="What habit do you want to change?"
            android:id="@+id/textView10"
           />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="I want to stop"
            android:textAlignment="center"
            android:textSize="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:layout_below="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView11"
           />


        <EditText
            android:id="@+id/bad_habit_short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColorHint="@color/Gray"
            android:textColor="@color/Black"
            android:hint="e.g. eating sweets"
            android:textAlignment="center"
            android:textSize="30dp"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/Black" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/Turquoise"
            android:text="I'm ready to start crunching!"
            android:padding="8dp"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:layout_below="@+id/bad_habit_short"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"/>


</LinearLayout>
