<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/magnify_big"
    tools:context=".MapTestActivity" >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crunch Community Habits"
        android:gravity="center"
        android:textColor="@color/background_color"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_x="19dp"
        android:layout_y="154dp"
        android:textSize="21dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEARCH"
        style="?android:listSeparatorTextViewStyle"
        android:textSize="18dp"
        android:textColor="@color/background_color"
        android:id="@+id/textView19"
        android:gravity="center"
        android:layout_below="@+id/search_button"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:layout_alignWithParentIfMissing="false"
        android:layout_x="0dp"
        android:layout_y="49dp" />

    <EditText
        android:id="@+id/search_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/textView18"
        android:layout_x="-2dp"
        android:layout_y="82dp" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#359c5e"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:text="go"
        android:textColor="#ffffff"
        android:layout_above="@+id/map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="294dp"
        android:layout_y="76dp" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Next"
        android:textColor="@color/White"
        android:background="@color/orange"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:layout_above="@+id/textView19"
        android:layout_alignRight="@+id/textView19"
        android:layout_alignEnd="@+id/textView19"
        android:layout_x="285dp"
        android:layout_y="147dp" />





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Want to set a reminder to stop your bad habit at this location?"
        style="?android:listSeparatorTextViewStyle"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:id="@+id/textView18" />

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="380dp"
        android:layout_height="320dp"
        android:tag="tag_fragment_map"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView18"
        android:layout_toEndOf="@+id/textView18"
        android:layout_x="2dp"
        android:layout_y="201dp" />


</AbsoluteLayout>