<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/Salmon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/boat"
            android:id="@+id/imageView3"
            android:layout_centerInParent="true"
            android:background="#ff6fbbab"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffe8e8e8"
        android:layout_height="match_parent"
        >


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Before We Start"
        android:textSize="25dp"
        android:fontFamily="sans-sarif"
        android:textStyle="bold"
        android:id="@+id/textView9"
        android:layout_marginTop="35dp"
        android:textColor="@color/Black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="A habit consists of a cue, routine, and reward. To start, we must first understand our habit."
            android:id="@+id/textView20"
            android:textColor="@color/Black"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView9"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Let's start the journey"
        android:id="@+id/start"
        android:background="@color/Coral"
        android:textColor="@color/Black"
        android:layout_below="@+id/textView20"
        android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</LinearLayout>