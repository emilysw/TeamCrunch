<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When do you do this habit?"
            android:textSize="30dp"
            android:fontFamily="sans-sarif"
            android:id="@+id/textView9"
            android:layout_marginTop="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical|center"
            android:textColor="@color/OrangeRed"/>

        <EditText
            android:id="@+id/etWhen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. in the afternoon after team meeting"
            android:textAlignment="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@color/Black"
            android:textSize="30dp"
            android:layout_marginBottom="60dp"
            android:layout_above="@+id/reminder_button"
            android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/reminder_button"
        android:text="Set a reminder!"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:textSize="20dp"
        android:background="@color/Turquoise"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:layout_gravity="center"
        android:paddingRight="5dp"
android:layout_marginBottom="10dp"
        android:paddingLeft="5dp"
        android:layout_above="@+id/next_button"
        android:layout_alignStart="@+id/next_button" />


    <Button
        android:id="@+id/next_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/Coral"
        android:text="Let's move forward"
        android:padding="8dp"
        android:textSize="20dp"
        android:textColor="@color/Black"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/dog_time"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/dog_time"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/dog_time"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>