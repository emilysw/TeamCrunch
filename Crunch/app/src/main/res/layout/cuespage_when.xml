<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/magnify_big">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bad Habit Time:"
        android:textColor="@color/background_color"
        android:layout_marginTop="87dp"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/textView17"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:src="@drawable/alarm_clock_deadline"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView17"
        android:id="@+id/imageView4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In the afternoons"
        android:textSize="20dp"
        android:textColor="@color/background_color"
        android:layout_marginBottom="95dp"
        android:id="@+id/when_name"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/reminder_button"
        android:text="Set new Alarm"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:drawablePadding="4dp"
        android:background="@color/Coral"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textColor="@color/White"
        android:layout_below="@+id/when_name"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/return_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Return"
        android:textColor="@color/White"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp" />


</RelativeLayout>