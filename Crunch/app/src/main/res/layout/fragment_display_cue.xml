<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="10"
              android:background="@drawable/magnify"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/OrangeRed"
        android:gravity="center"
        android:text="Let's explore your cues!"
        android:textSize="30dp"
       />

    <TextView
        android:id="@+id/reasons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="These put your mind into autopilot and trigger your habit. Examine yourself through a lens and be aware of them!"
        android:textSize="18dp"
        android:color="@color/Black"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/where"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/where"
            android:textOff="M"
            android:textOn="M"/>

        <ImageButton
            android:id="@+id/when"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/clock"
            />

        <ImageButton
            android:id="@+id/withWho"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/who"
            />

        <ImageButton
            android:id="@+id/emotion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/heart"/>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="8">

        <!--<ImageView-->
            <!--android:id="@+id/myImageView"-->
            <!--android:layout_width="450dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginLeft="0dp"-->
            <!--android:src="@drawable/magnify"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_marginBottom="32dp"-->
            <!--android:visibility="invisible"-->
            <!--android:layout_alignParentEnd="false"-->
            <!--android:layout_alignParentStart="true" />-->




    </RelativeLayout>


</LinearLayout>