<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/Salmon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/boat"
            android:id="@+id/imageView13"
            android:layout_centerInParent="true"
            android:background="#ff6fbbab"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffe8e8e8"
        android:layout_height="match_parent"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See how others are doing"
            android:textSize="25dp"
            android:fontFamily="sans-sarif"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:id="@+id/textView19"
            android:textColor="@color/Black"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="Surround yourself with people who live the way you want to live."
            android:id="@+id/textView120"
            android:textColor="@color/Black"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView19"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Pair up now!"
            android:id="@+id/startchallenge"
            android:background="@color/Coral"
            android:textColor="@color/Black"
            android:layout_below="@+id/textView120"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</LinearLayout>