<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color" android:theme="@android:style/Theme.NoTitleBar">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:fontFamily="sans-sarif"
        android:textColor="@color/White"
        android:text="Crunch your habits!"
        android:paddingBottom="10dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="57dp"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="66dp"
        android:maxHeight="50px"
        android:maxWidth="50px"
        android:minHeight="50px"
        android:minWidth="50px"
        android:scaleType="centerInside"
        android:src="@drawable/button_one"
        android:paddingRight="20dp"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Idenfiy the cues"
        android:textSize="20dp"
        android:fontFamily="sans-sarif"
        android:textColor="@color/White"
        android:paddingBottom="10dp"
        android:id="@+id/textView3"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="66dp"
        android:maxHeight="50px"
        android:maxWidth="50px"
        android:minHeight="50px"
        android:minWidth="50px"
        android:scaleType="centerInside"
        android:src="@drawable/button_two"
        android:paddingRight="20dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5"
        android:id="@+id/imageView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch the routine"
        android:fontFamily="sans-sarif"
        android:textSize="20dp"
        android:textColor="@color/White"
        android:paddingBottom="10dp"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"/>
    <ImageView
        android:layout_width="75dp"
        android:layout_height="66dp"
        android:maxHeight="50px"
        android:maxWidth="50px"
        android:minHeight="50px"
        android:minWidth="50px"
        android:scaleType="centerInside"
        android:src="@drawable/button_three"
        android:paddingRight="20dp"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/White"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="200dp"
            android:paddingTop="5dp"
            android:layout_height="30dp"
            android:text="Start!"
            android:textColor="@color/White"
            android:background="@color/orange"
            android:id="@+id/button"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


</RelativeLayout>